{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "statics"
  ]
}